{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "scripthost"
    ],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./es",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "typings/*"
  ]
}
